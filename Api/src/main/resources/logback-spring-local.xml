<included>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <springProperty name="logging.level.root" source="logging.level.root" defaultValue="INFO"/>
    <!-- ThresholdFilter를 적용한 appender 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!-- WARN 레벨 이상의 이벤트만 허용 -->
            <level>INFO</level>
        </filter>
        <layout>
            <pattern>
                [CONSOLE] [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%logger{40}:line] -%msg%n
            </pattern>
        </layout>
    </appender>
    <!-- ROOT 로거에 적용한 appender 설정 -->
    <root level="${logging.level.root}">
        <appender-ref ref="CONSOLE"/>
    </root>
</included>
